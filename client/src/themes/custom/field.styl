
input:not(.no-style), textarea:not(.no-style), .textfield:not(.no-style)
  padding-left: 8px
  padding-right: 8px
  border-width: 1px
  border-style: solid
  border-color: #e8e5e5
  background-color: #fff
  vertical-align: top
  border-radius: 1px
  box-shadow: none
  // box-shadow: 0 0 2px 1px rgba(0, 0, 0, .1)
  transition: all .5s ease;

input:not(.no-style):hover, textarea:not(.no-style):hover, .textfield:not(.no-style):hover
  border-bottom: 1px solid #e8e5e5
  box-shadow: 0 4px 5px 0 rgba(0, 0, 0, 0.11), 0 0 0 1px rgba(0, 0, 0, 0.1)

input:disabled, textarea:disabled, .textfield:disabled
  background-color: #d0d0d0
  border-radius: 2px
  opacity: .6 !important
  border: 1px solid #cccccc

input:disabled:hover, textarea:disabled:hover, .textfield:disabled:hover
  border-bottom: 1px dotted #979797
  box-shadow: none

input:not(.no-style):focus, textarea:not(.no-style):focus, .textfield:not(.no-style):focus
  box-shadow: 0 3px 8px 0 rgba(0, 0, 0, 0.33), 0 0 0 1px rgba(0, 0, 0, 0.1)
  border-bottom: 1px solid #e8e5e5

input:not(.no-style).has-error, textarea:not(.no-style).has-error, .textfield:not(.no-style).has-error
  border: 1px solid rgba(219, 40, 40, 0.27) !important
  border-radius: 2px
  background-color: rgba(255, 0, 0, 0.09)

input:not(.no-style), textarea:not(.no-style), .textfield:not(.no-style)
  border-width: 1px 0 0 0
  box-shadow: 0 1px 3px rgba(0,0,0,.12), 0 1px 2px rgba(0,0,0,0.24)
input:not(.no-style):focus, textarea:not(.no-style):focus, .textfield:not(.no-style):focus
  border-bottom: none;
  box-shadow: 0 1px 3px rgba(0,0,0,.12), 0 1px 2px rgba(0,0,0,0.24), 4px 1px 5px 0 rgba(0,0,0,.05), -4px 1px 5px 0 rgba(0,0,0,.05)
input:not(.no-style):hover, textarea:not(.no-style):hover, .textfield:not(.no-style):hover
  border-bottom: none;
  box-shadow: 0 1px 3px rgba(0,0,0,.12), 0 1px 2px rgba(0,0,0,0.24), 4px 1px 5px 0 rgba(0,0,0,.05), -4px 1px 5px 0 rgba(0,0,0,.05)
input:disabled, textarea:disabled, .textfield:disabled
  background-color: rgba(222, 222, 222, 0.81)
  border-radius: 2px
  opacity: 0.6 !important
  border-color: #cccccc
  border-bottom: none;
  box-shadow: 0 1px 3px rgba(0,0,0,.12), 0 1px 2px rgba(0,0,0,0.24), 4px 1px 5px 0 rgba(0,0,0,.05), -4px 1px 5px 0 rgba(0,0,0,.05)

.input-bar
  position: relative
  display: block
  margin-bottom -1px
.input-bar:before, .input-bar:after
  content: " "
  background: $primary
  height: 2px
  width: 0
  position: absolute
  bottom: 2px
  transition: all
  transition-duration: 300ms
.input-bar:before
  left: 50%
.input-bar:after
  right: 50%
.input:focus ~ .input-bar:before, .input:focus ~ .input-bar:after
  width: 50%
.input.has-error ~ .input-bar:before, .input.has-error ~ .input-bar:after
  background: $negative

.stacked-label label, .floating-label label
  left: 6px;

.floating-label input:focus ~ label, .floating-label input:valid ~ label, .floating-label textarea:focus ~ label, .floating-label textarea:valid ~ label
  color: darken($primary, 10%)

.q-picker-textfield
  &:after
    right 5px

.q-checkbox input + div:before
  border-width: 1px
  border-style: solid
  border-color: #e8e5e5
  box-shadow: 0 1px 3px rgba(0,0,0,.12), 0 1px 2px rgba(0,0,0,0.24)

input:not(.no-style)[disabled], textarea:not(.no-style)[disabled], .textfield:not(.no-style)[disabled], input:not(.no-style).disabled, textarea:not(.no-style).disabled, .textfield:not(.no-style).disabled, input:not(.no-style)[readonly], textarea:not(.no-style)[readonly], .textfield:not(.no-style)[readonly], input:not(.no-style).readonly, textarea:not(.no-style).readonly, .textfield:not(.no-style).readonly {
  border-bottom-style solid
  border-bottom-width 1px
}
