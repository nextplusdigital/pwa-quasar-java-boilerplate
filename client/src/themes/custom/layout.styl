
.layout-header, .layout-footer, a, button, label, .item-content
  font-family play

$scroll = #c0c0c0
::-webkit-scrollbar
  width 7px
  height 7px
::-webkit-scrollbar-track
  background $scroll
  border 3px solid transparent
  background-clip content-box
::-webkit-scrollbar-thumb
  border-radius 1px
  background $scroll
  border 1px solid $scroll
::-webkit-scrollbar-thumb:window-inactive
  background $scroll

.mini-scroll
  overflow-y scroll
  overflow-x hidden
  &::-webkit-scrollbar
    width 5px
  &::-webkit-scrollbar-track
    background $scroll
    border 2px solid transparent
    background-clip content-box
  &::-webkit-scrollbar-thumb
    border-radius 1px
    background $scroll
    border 1px solid $scroll
  &::-webkit-scrollbar-thumb:window-inactive
    background $scroll

.q-fab.opened .backdrop
  background rgba(78, 78, 78, 0.5)

.drawer-content
  z-index 3000
