.input
  background-attachment scroll
  background-clip border-box
  background-color rgb(255, 255, 255)
  background-image none
  background-origin padding-box
  background-position-x 0
  background-position-y 0
  background-size auto
  border-bottom-color rgb(232, 229, 229)
  border-bottom-left-radius 1px
  border-bottom-right-radius 1px
  border-bottom-style solid
  border-bottom-width 0
  border-image-outset 0
  border-image-repeat stretch
  border-image-slice 100%
  border-image-source none
  border-image-width 1
  border-left-color rgb(232, 229, 229)
  border-left-style solid
  border-left-width 0
  border-right-color rgb(232, 229, 229)
  border-right-style solid
  border-right-width 0
  border-top-color rgb(232, 229, 229)
  border-top-left-radius 1px
  border-top-right-radius 1px
  border-top-style solid
  border-top-width 1px
  box-shadow rgba(0, 0, 0, 0.12) 0px 1px 3px 0px, rgba(0, 0, 0, 0.24) 0px 1px 2px 0px
  box-sizing border-box
  color rgb(0, 0, 0)
  cursor auto
  display inline-block
  font-family Roboto
  font-size 14.4px
  font-stretch normal
  font-style normal
  font-variant-caps normal
  font-variant-ligatures normal
  font-variant-numeric normal
  font-weight normal
  height 37px
  letter-spacing normal
  line-height 20.16px
  margin-bottom 2px
  margin-left 0
  margin-right 0
  margin-top 0
  max-width 100%
  outline-color rgb(0, 0, 0)
  outline-style none
  outline-width 0px
  overflow-x visible
  overflow-y visible
  padding-bottom 8px
  padding-left 8px
  padding-right 8px
  padding-top 8px
  text-align start
  text-indent 0
  text-rendering auto
  text-shadow none
  text-size-adjust 100%
  text-transform none
  transition-delay 0s
  transition-duration 0.5s
  transition-property all
  transition-timing-function ease
  user-select text
  vertical-align top
  width 956px
  word-spacing 0
  writing-mode horizontal-tb
  -webkit-appearance none
  -webkit-box-direction normal
  -webkit-font-smoothing antialiased
  -webkit-rtl-ordering logical
  -webkit-tap-highlight-color rgba(0, 0, 0, 0)
  -webkit-border-image none

.input-bar
  position: relative
  display: block
  margin-bottom -1px
.input-bar:before, .input-bar:after
  content: " "
  background: $primary
  height: 2px
  width: 0
  position: absolute
  bottom: 2px
  transition: all
  transition-duration: 300ms
.input-bar:before
  left: 50%
.input-bar:after
  right: 50%
.input:focus ~ .input-bar:before, .input:focus ~ .input-bar:after
  width: 50%
.input.has-error ~ .input-bar:before, .input.has-error ~ .input-bar:after
  background: $negative
